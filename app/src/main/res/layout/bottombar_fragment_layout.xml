<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/LayoutFriends"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bb_imageViewFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_thumb_up_24px" />

        <TextView
            android:id="@+id/bb_textViewFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutPlanATrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bb_imageViewPlanATrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_event_24px" />

        <TextView
            android:id="@+id/bb_textViewPlanATrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan a Trip"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bb_imageViewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_box_24px" />

        <TextView
            android:id="@+id/bb_textViewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutMyTrips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bb_imageViewMyTrips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_card_travel_24px" />

        <TextView
            android:id="@+id/bb_textViewMyTrips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Trips"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bb_imageViewChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_speaker_notes_24px" />

        <TextView
            android:id="@+id/bb_textViewChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Chat"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>